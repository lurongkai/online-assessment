@model IEnumerable<AnswerSheet>

@{
    ViewBag.Title = "My Answer Sheets";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">所有答卷</h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>时间</td>
                    <td>已阅卷</td>
                    <td>总分</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Timestamp.ToString("yyyy-MM-dd hh:mm:ss")</td>
                        <td>
                            @if (item.IsEnvaluated)
                            {
                                <text>已阅卷</text>
                            }
                            else
                            {
                                <text>未阅卷</text>
                            }
                    </td>
                        <td>@item.TotalScore
                            @if (item.IsEnvaluated)
                            {
                                <span>(总分)</span>
                            }
                            else
                            {
                                <span>(仅选择)</span>
                            }
                        </td>

                        <td style="width: 20%">
                            <a class="btn btn-danger btn-xs" href="@Url.Action("Detail", new {answerSheetId = item.AnswerSheetId})">查看详情</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

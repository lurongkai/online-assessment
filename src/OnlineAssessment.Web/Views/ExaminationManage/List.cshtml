@model IEnumerable<Examination>

<p>
    <table class="table table-hover table-bordered">
        <tr>
            <th>名称</th>
            <th>开始日期</th>
            <th>结束日期</th>
            <th>考试时长</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.BeginDate
                </td>
                <td>
                    @item.DueDate
                </td>
                <td>
                    @item.Duration
                </td>
                <td>
                    @if (item.State == ExaminationState.Pending) { @Html.ActionLink("激活", "Active", new {examinationId = item.ExaminationId}, new {@class = "btn btn-primary btn-xs"}) }
                    @if (item.State == ExaminationState.Active) { @Html.ActionLink("归档", "Archive", new {examinationId = item.ExaminationId}, new {@class = "btn btn-danger btn-xs"}) }
                </td>
            </tr>
        }
    </table>
</p>
@model IEnumerable<News>
@{
    ViewBag.Title = "News List";
    Layout = "~/Views/Shared/_common-layout.cshtml";
}

<p>
    @Html.ActionLink("新建", "NewsCreate", null, new {@class = "btn btn-primary"})
</p>
<p>
    <table class="table table-hover table-bordered">
        <tr>
            <th>标题</th>
            <th>日期</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.PublishedDate
                </td>
                <td>
                    @Html.ActionLink("编辑", "NewsEdit", new {newsId = item.NewsId}, new {@class = "btn btn-primary btn-xs"})
                    @Html.ActionLink("删除", "NewsDelete", new {newsId = item.NewsId}, new {@class = "btn btn-danger btn-xs"})
                </td>
            </tr>
        }
    </table>
</p>
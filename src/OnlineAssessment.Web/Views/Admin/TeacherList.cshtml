@model IEnumerable<Teacher>
@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/Shared/_common-layout.cshtml";
}


<p>
    @Html.ActionLink("新建", "TeacherCreate", null, new {@class = "btn btn-primary"})
</p>
<p>
    <table class="table table-hover table-bordered">
        <tr>
            <th>用户名</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @Html.ActionLink("编辑", "SubjectEdit", null, new {@class = "btn btn-primary btn-xs"})
                    @Html.ActionLink("删除", "SubjectDelete", null, new {@class = "btn btn-danger btn-xs"})
                </td>
            </tr>
        }
    </table>
</p>
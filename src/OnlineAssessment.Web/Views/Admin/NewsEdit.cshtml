@model News

@{
    ViewBag.Title = "News Edit";
    Layout = "~/Views/Shared/_common-layout.cshtml";
}

@using (Html.BeginForm("NewsEdit", "Admin", FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.HiddenFor(m => m.NewsId)
    <div class="form-group">
        @Html.LabelFor(m => m.Title, "标题", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "标题" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, "正文", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", placeholder = "正文", rows = 8 })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">修改</button>
        </div>
    </div>
}


@model Subject
@{
    ViewBag.Title = "SubjectCreate";
    Layout = "~/Views/Shared/_common-layout.cshtml";
}

@using (Html.BeginForm("SubjectCreate", "Admin", FormMethod.Post, new {@class = "form-horizontal"})) {
    <div class="form-group">
        @Html.LabelFor(m => m.SubjectKey, "课程key", new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.SubjectKey, new {@class = "form-control", placeholder = "课程key"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "课程名称", new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "课程名称"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, "课程描述", new {@class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Description, new {@class = "form-control", placeholder = "课程描述"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">创建</button>
        </div>
    </div>
}
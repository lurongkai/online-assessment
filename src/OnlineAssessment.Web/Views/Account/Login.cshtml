@model OnlineAssessment.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    ViewData["DisableNavControl"] = true;
    Layout = "~/Views/Shared/_site-layout.cshtml";
}

@section notification_area {
    @if (ViewData.ModelState.Count > 0) {
        <div class="alert alert-danger">@Html.ValidationSummary(true) </div>
    }
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">登录</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal"})) {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new {@class = "col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", placeholder = "用户名"})
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new {@class = "col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "密码"})
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            <label class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            <button class="btn btn-primary" type="submit">登入</button>
                            @Html.ActionLink("注册", "Register", "Account", null, new {@class = "btn btn-default"})
                        </div>
                    </div>
                    @*@Html.ValidationSummary(true)*@
                }
            </div>
        </div>
    </div>
</div>
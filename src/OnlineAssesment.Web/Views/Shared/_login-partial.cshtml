@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">你好 @User.Identity.GetUserName() <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("修改信息", "Manage", "Account")</li>
            <li class="active">@Html.ActionLink("注销", "LogOff", "Account")</li>
            <li class="divider"></li>
            <li class="dropdown-header">提醒</li>
            <li><a href="#">即将到来的考试</a></li>
        </ul>
    </li>
}
else
{
    <form class="navbar-form navbar-right" action="/Account/Login" method="post">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="text" name="username" placeholder="Username" class="form-control">
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
            @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "btn btn-default" })
        }
    </form>
}

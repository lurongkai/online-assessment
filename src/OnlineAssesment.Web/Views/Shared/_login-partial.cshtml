@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated) {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">你好 @User.Identity.GetUserName() <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("修改信息", "Manage", "Account")</li>
            <li class="active">@Html.ActionLink("注销", "LogOff", "Account")</li>
            @if (User.IsInRole("Student")) {
                <li class="divider"></li>
                <li class="dropdown-header">提醒</li>
                <li><a href="#">即将到来的考试</a></li>
            }
        </ul>
    </li>
} else {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">登录<b class="caret"></b></a>
        <div class="dropdown-menu form-signin">
            @Html.Partial("_login")
        </div>
    </li>
}
